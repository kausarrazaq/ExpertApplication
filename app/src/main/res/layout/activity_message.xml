<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MessageActivity">
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar_actionbar4"
      android:layout_width="0dp"
      android:layout_height="71dp"
      android:background="@color/gray"
      android:fitsSystemWindows="true"
      app:theme="@style/ToolbarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="MissingClass" />

  <TextView
      android:id="@+id/textView102"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:fontFamily="@font/robotobold"
      android:text="Minnie Ramsey"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/toolbar_actionbar4"
      app:layout_constraintEnd_toEndOf="@+id/toolbar_actionbar4"
      app:layout_constraintStart_toStartOf="@+id/toolbar_actionbar4"
      app:layout_constraintTop_toTopOf="@+id/toolbar_actionbar4" />

  <ImageView
      android:id="@+id/imageView28"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="@+id/toolbar_actionbar4"
      app:layout_constraintTop_toTopOf="@+id/toolbar_actionbar4"
      app:srcCompat="@drawable/videocallicon" />

  <ImageView
      android:id="@+id/imageView29"
      android:layout_width="304dp"
      android:layout_height="187dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view27"
      app:srcCompat="@drawable/chat1" />

  <ImageView
      android:id="@+id/imageView30"
      android:layout_width="257dp"
      android:layout_height="107dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView29"
      app:srcCompat="@drawable/chat2" />

  <View
      android:id="@+id/view26"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="24dp"
      android:background="@drawable/chatborderview"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <ImageView
      android:id="@+id/imageView31"
      android:layout_width="21dp"
      android:layout_height="21dp"
      android:layout_marginStart="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/view26"
      app:layout_constraintStart_toStartOf="@+id/view26"
      app:layout_constraintTop_toTopOf="@+id/view26"
      app:srcCompat="@drawable/emojiicon" />

  <EditText
      android:id="@+id/editTextTextPersonName6"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:hint="Write a message..."
      android:backgroundTint="@color/white"
      app:layout_constraintBottom_toBottomOf="@+id/view26"
      app:layout_constraintEnd_toStartOf="@+id/imageView32"
      app:layout_constraintStart_toEndOf="@+id/imageView31"
      app:layout_constraintTop_toTopOf="@+id/view26" />

  <ImageView
      android:id="@+id/imageView32"
      android:layout_width="23dp"
      android:layout_height="23dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/view26"
      app:layout_constraintEnd_toEndOf="@+id/view26"
      app:layout_constraintTop_toTopOf="@+id/view26"
      app:srcCompat="@drawable/attachment" />

  <View
      android:id="@+id/view27"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:background="@color/graycolor"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar_actionbar4" />

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="304dp"
      android:layout_height="117dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView30"
      app:srcCompat="@drawable/chat3" />

</androidx.constraintlayout.widget.ConstraintLayout>