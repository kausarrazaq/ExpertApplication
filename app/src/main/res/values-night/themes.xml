<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpertApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/gray</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="Theme.ExpertApplication.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Topbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <!-- blank styles for better code readability-->
    <style name="TextAppearance" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>
    <style name="TextAppearance.BottomNavigationView"/>

    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">10sp</item>
        <item name="iconTint">@color/graycolor</item>
        <item name="android:textColor">@color/graycolor</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">10sp</item>
        <item name="iconTint">@color/graycolor</item>
        <item name="android:textColor">@color/graycolor</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@color/black</item>
        <item name="fontFamily">@font/robotobold</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@color/black</item>
        <item name="fontFamily">@font/robotobold</item>

    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/black</item>
        <item name="android:paddingTop">8dp</item>
    </style>
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">14sp</item>
    </style>

</resources>